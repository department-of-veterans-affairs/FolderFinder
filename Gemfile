source 'https://rubygems.org'
ruby '2.0.0'
#ruby-gemset=folderfinder

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'

# Defaults
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

# For logging in
gem 'devise', '3.5.10'
gem 'cancan'

# Makes barcodes
gem 'barby', '~> 0.5.1'

# Search
gem 'ransack'

group :development do
  gem 'sqlite3', '1.3.8'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'pg', '0.15.1'
  gem 'rails_12factor', '0.0.2'
end